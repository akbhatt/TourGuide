<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attractionFragmentLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AttractionsFragment">

    <TextView
        android:id="@+id/attractionsFragmentWelcomeTextView"
        style="@style/TourListTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tour_list_background"
        android:text="@string/attractions_welcome_text"
        android:textColor="@color/justWhite"
        android:textSize="@dimen/history_text_size" />

    <ListView
        android:id="@+id/attractionsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>