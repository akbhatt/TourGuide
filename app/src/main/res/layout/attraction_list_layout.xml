<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attractionsListConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/attraction_list_background"
    android:padding="@dimen/nano_dimen">

    <TextView
        android:id="@+id/attractionsNameTextView"
        style="@style/AttractionsListTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:paddingTop="@dimen/nano_dimen"
        android:textColor="@color/justWhite"
        android:textSize="@dimen/list_items_titles_size"
        tools:text="Attraction Name" />

    <LinearLayout
        android:id="@+id/attractionsListHorizontalLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attractionsNameTextView"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/attractionsImageView"
            android:layout_width="@dimen/list_image_width_dimen"
            android:layout_height="@dimen/list_image_height_dimen"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="0"
            android:contentDescription="@string/attraction_image_cd"
            android:scaleType="fitXY"
            android:src="@drawable/detroit_welcome_image" />

        <LinearLayout
            android:id="@+id/attractionsListVerticalLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attractionsAddressTextView"
                style="@style/AttractionsListTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="map"
                android:paddingBottom="0dp"
                android:textColorLink="@color/bitGold"
                android:textSize="20sp"
                tools:text="Address" />

            <TextView
                android:id="@+id/attractionsPhoneTextView"
                style="@style/AttractionsListTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:paddingBottom="1sp"
                android:textSize="15sp"
                tools:text="(123)456-789" />

            <TextView
                android:id="@+id/attractionsWebsiteTextView"
                style="@style/AttractionsListTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                tools:text="attractions.com" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>